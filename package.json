{
  "private": true,
  "engines": {
    "node": ">=10",
    "yarn": ">=1.12.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "standard",
    "test": "yarn run lint && nyc ava",
    "test:ci": "yarn run lint && nyc ava --tap | tap-xunit >$CIRCLE_TEST_REPORTS/junit.xml"
  },
  "devDependencies": {
    "ava": "^1.0.1",
    "get-port": "^4.1.0",
    "nyc": "^13.1.0",
    "pem": "^1.13.2",
    "standard": "^12.0.1",
    "tap-xunit": "^2.3.0"
  },
  "standard": {
    "ignore": [
      "**/node_modules"
    ]
  },
  "ava": {
    "files": [
      "packages/*/test",
      "test"
    ],
    "sources": [
      "packages/*/lib/**/*.js",
      "packages/*/index.js"
    ]
  },
  "nyc": {
    "all": true,
    "include": [
      "packages/*/lib/**/*.js",
      "packages/*/index.js"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ]
  }
}
